{
  "manifest_version": 3,
  "name": "summary bot for website",
  "version": "1.0",
  "description": "Use llm model to help you summary the content of website.",
  "action": {},
  "permissions": ["storage", "sidePanel"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "side_panel": {
    "default_path": "index.html"
  }
}
